generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CourseApplication {
  id          String @id @default(uuid())
  courseName  String
  coursePrice String
  firstName   String
  lastName    String
  email       String
  phone       String
}

model Certificate {
  id                  String      @id @default(uuid())
  certificateNumber   String      @unique
  certificateImageUrl String
  courseName          String
  firstName           String
  lastName            String
  email               String
  phone               String
  comment             String
  grade               courseGrade
  image               String?
  country             String
}

enum courseGrade {
  Excellent
  VeryGood
  Good
  Pass
}
